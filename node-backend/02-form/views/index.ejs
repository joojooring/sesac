    </form>



        <!------------ post 요청 --------->
    <h1>회원가입 post요청</h1>

    <!-- 태그에서 이벤트에 인자에 this를 넣으면 그태그 자체가 넘어감 -->

    <form action="/post/ver2" method="post">
      <input type="text" name="id" pattern="^([a-zA-Z0-9가-힣]){4,12}$" title="소문자, 대문자,한글, 숫자로 조합된 4~12자리 문자로 입력" required />
      <input type="password" name="pw" oninput="validChedckPw(this)" />
      <div id="error-pw">
      <input type="text" name="name" minlength="5" required/>
      <input type="number" min ="5", max="10" placeholder="숫자">
      <input type="text" name="email"  />
      <button type="submit">제출</button>


    </form>
    <script>
      function validChedckPw(el){
        //정규식을 regex라고 함 슬래시를 앞 뒤로 넣어줌
        const regexPw = /^([a-z0-9]){8,12}$/
        const value=el.value
        const error = document.getElementById("error-pw")
        // regexPw.test("검사하고 싶은 값")=> true or false를 return함
        if(regexPw.test(value)){
          error.innerHTML = ""
          console.log("정규식 일치")
        } else{
          error.innerHTML = "소문자, 대문자,한글, 숫자로 조합된 8~12자리 문자로 입력 "
          consoel.log("정규식 불일치 다시해!!")
        }
      }
    </script>
